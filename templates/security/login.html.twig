{% extends 'base.html.twig' %}

{% block title %}{{ 'connexion'|trans }}{% endblock %}

{% block body %}
    <h2>{{ 'connexion'|trans }}</h2>

    {% if error %}
        <div class="form-group">
            <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        </div>
    {% endif %}

    {{ form_start(loginForm) }}
        <div class="form-group">
            {{ form_widget(loginForm.username) }}
        </div>

        <div class="form-group">
            {{ form_widget(loginForm.password) }}
        </div>
        
        <div class="form-group">
            {{ form_widget(loginForm.login) }}
        </div>
    {{ form_end(loginForm) }}
{% endblock %}