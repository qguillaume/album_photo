{# templates/theme/create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau Thème{% endblock %}

{% block body %}
    <h2>Créer un nouveau Thème</h2>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_widget(form.name) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.save, {'attr': {'class': 'green-button'}}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}
