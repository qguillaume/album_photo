{% extends 'base.html.twig' %}

{% block body %}
<h1>Photos de l'album : {{ album.getNomAlbum() }}</h1>

{# Affiche l'image par défaut avec un lien vers la liste des albums #}
<div class="default-photo">
    
</div>

<div class="photos-container">
    <div class="photo">
        <a href="{{ path('photo_albums') }}">
        <img src="{{ asset('images/default-photo.png') }}" 
                alt="Retour à la liste des albums">
        </a>
        <p>Retour aux albums</p>
    </div>
    {% for photo in photos %}
        <div class="photo">
            <img src="{{ asset('uploads/photos/' ~ photo.filePath) }}" alt="{{ photo.title }}" class="photo-thumbnail">
            <p>{{ photo.title }}</p>
            <!-- Conteneur React pour modifier/supprimer -->
            <div id="photo-controls-{{ photo.id }}" data-photo-id="{{ photo.id }}" data-photo-title="{{ photo.title }}" data-photo-url="{{ asset('uploads/photos/' ~ photo.filePath) }}"></div>
        </div>
    {% else %}
        <p>Aucune photo dans cet album.</p>
    {% endfor %}
</div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
